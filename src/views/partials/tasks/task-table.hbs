<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">N.</th>
            <th scope="col">title</th>
            <th scope="col">descripiton</th>
            <th scope="col">operations</th>
          </tr>
        </thead>
        <tbody>
          {{#each tasks}}
            <tr>
                <td>{{@index}}</td>
                <td>{{title}}</td>
                <td>{{description}}</td>
                <td>
                    {{#if done}}
                      <a class="btn btn-success" href="/toggleDone/{{_id}}">undone</a>
                    {{else}}
                      <a class="btn btn-success" href="/toggleDone/{{_id}}">done</a>
                    {{/if}}
                    <a class="btn btn-danger" href="/delete/{{_id}}">delete</a>
                    <a class="btn btn-primary" href="/edit/{{_id}}">update</a>
                </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
